<form action="/constraints" method="POST" class="form-horizontal">
  <div class="modal-body">

    <p class="alert">Restricción para la actividad: {{activity.name}} ({{dateFormat activity.end_date format='DD/MM/YYYY'}})</p>

    <div class="form-group">
      <label class="control-label col-sm-3">Nombre</label>
      <div class="col-sm-8">
        <input type="text" name="constraint[name]" class="form-control name constraint-name" autofocus="true">
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-3">Se remueve el</label>
      <div class="col-sm-8">
        <input type="text" name="constraint[end_date]" class="form-control end-date" autocomplete="OFF" placeholder="dd/mm/yyyy">
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-3">Categoría</label>
      <div class="col-sm-8">
        <select class="with-selectize-stickit category-id" name="constraint[category_id]"></select>
      </div>
    </div>

    
    <div class="form-group">
      <label class="control-label col-sm-3">La remueve</label>
      <div class="col-sm-8">
        <select class="with-selectize-stickit assigned-id" name="constraint[assigned_id]"></select>
      </div>
    </div>

  </div>

  <div class="modal-footer">
    <input type="hidden" name="authenticity_token" value="">
    {{!-- <input type="hidden" name="constraint[activity_id]" value="{{activity.id}}" class="hidden-activity-id"> --}}
    <input type="submit" class="btn btn-success new-constraint-submit-btn" value="Guardar">
    <a href="#" data-dismiss="modal" class="btn btn-link">Cancelar</a>
  </div>
</form>
