<form action="/activities" method="POST" class="form-horizontal activity-form">
  <div class="modal-body">
    <div class="form-group">
      <label class="control-label col-sm-3">Nombre</label>
      <div class="col-sm-8">
        <input type="text" name="activity[name]" class="form-control name" autofocus="true">
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-3">Descripción</label>
      <div class="col-sm-8">
        <textarea name="activity[description]" class="form-control description with-autosize" placeholder="Especificaciones de lo que se realizará"></textarea>
      </div>
    </div>

    <div class="form-group responsible-select">
      <label class="control-label col-sm-3">Responsable</label>
      <div class="col-sm-8">
        <select class="with-selectize-stickit assigned-id" name="activity[assigned_id]"></select>
      </div>
    </div>

