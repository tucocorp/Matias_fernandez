<form action="/projects" method="POST" class="form-horizontal">
  <div class="modal-body">
    <div class="form-group form-group-name">
      <label class="control-label col-sm-3">Nombre</label>
      <div class="col-sm-8">
        <input type="text" name="project[name]" class="form-control project-name" autofocus="true">
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-3">Descripci√≥n</label>
      <div class="col-sm-8">
        <textarea name="project[description]" class="form-control project-description" rows="4"></textarea>
      </div>
    </div>

    <div class="form-group form-group-type">
      <label class="control-label col-sm-3">Organizador</label>

      <div class="col-sm-8">
        <label class="radio-inline">
          <input type="radio" name="project[projectable_type]" value="User" class="projectable-type">
          <span>Proyecto personal</span>
        </label>

        <label class="radio-inline">
          <input type="radio" name="project[projectable_type]" value="Company" class="projectable-type">
          <span>Proyecto de empresa</span>
        </label>
      </div>
    </div>

    <div class="form-group company-list-select hidden">
      <div class="col-sm-3"></div>
      <div class="col-sm-8">
        <select class="with-selectize project-companies" name="project[projectable_id]">
          <option value="">Seleccione una empresa</option>
          {{#each companies}}
            <option value="{{id}}">{{ name }}</option>
          {{/each}}
        </select>
      </div>
    </div>
  </div>

  <div class="modal-footer">
    <input type="hidden" name="authenticity_token" value="">
    {{!-- <input type="hidden" name="projectable_id" value="" class="hidden-user-id"> --}}
    <input type="submit" class="btn btn-success submit-project" value="Guardar">
    <a href="#" data-dismiss="modal" class="btn btn-link">Cancelar</a>
  </div>
</form>
